<div class="fadeInLeft black white-text">
  <h1 class="center-align"><span class="green-letter">R</span>esults</h1>
  <div class="row">
    <div class="col s12 center-align">
      <div class="row">
        <div class="col s12 m5">
          <h2>{{ general.symbol }}</h2>
          <img class="coin-img responsive-img" src={{ general.image }} alt="coin-image">
        </div>
        <div class="col s12 m7 search-gen-info">
          <h2>Details</h2>
          <table class="centered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Algorithm</th>
                <th>Proof Type</th>
              </tr>
            </thead>
            <tbody>
              <td>{{ general.name }}</td>
              <td>{{ general.algorithm }}</td>
              <td>{{ general.proofType }}</td>
            </tbody>
          </table>
          <br/>
          <!--  @TODO : make this button add the coin to the user's portfolio or maybe open a modal so they can enter the quantity -->
          <button class="waves-effect waves-light btn">Add To Portfolio</button>       
        </div>
      </div>

      
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <canvas id="coinLineChart" width="400" height="400"></canvas>
      {{!-- {{prices.open}} Integrate Real Data later on --}}
    </div>
  </div>
  
  
</div>

